<div class='well' style='margin-top:20px'><h2>Push Message</h2></div>

<%= form_for @push,:url=>"/push/send_push" do |f| %>
  <% if @push.errors.any? %>
    <div class="alert alert-error">
      <h3><%= pluralize(@push.errors.count, "error") %> prohibited this post from being saved:</h3>

      <ul>
      <% @push.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style='margin-top:10px'>
	<%= f.label :badge%>
  	<%= f.text_field :badge %><br/>
	<%= f.label :alert, :style=>"display:inline" %>&nbsp;<span>(alert message)</span><br/>
  	<%= f.text_field :alert %><br/>
	<%= f.label 'Quote ID' %>
  	<%= f.text_field :quote_id%><br/>
  </div>

  <div><%= f.submit "Add",{:class=>'btn',:style=>'margin-top:10px'} %></div>
<% end %>

<div class='well' style='margin-top:20px'><h2>APN GroupNotifications</h2></div>
<table class='table table-striped table-bordered'>
	<tr>
		<th style='text-align:center'>ID</th>
		<th style='text-align:center'>Group</th>
		<th style='text-align:center'>Alert</th>
		<th style='text-align:center'>Badge</th>
		<th style='text-align:center'>Custom URL</th>
		<th style='text-align:center'>Create At</th>
	</tr>
	<% @notifications.each do |gn| %>
		<tr>
			<td><%=gn.id%></td>
			<td><%=gn.group.name%></td>
			<td><%=gn.alert%></td>
			<td><%=gn.badge%></td>
			<td><%=gn.custom_properties%></td>
			<td><%=gn.created_at.strftime("%m/%d/%Y")%></td>
		</tr>
	<%end%>
</table>