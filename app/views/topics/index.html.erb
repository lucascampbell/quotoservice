<div class='well' style='margin-top:20px'><h2>Topics</h2></div>
<table class='table table-striped table-bordered'>
	<tr>
		<th style='text-align:center'>ID</th>
		<th style='text-align:center'>Name</th>
		<th style='text-align:center'>Visible</th>
		<th style='text-align:center'>Status</th>
		<th style='text-align:center'>Expires</th>
		<th style='text-align:center'>Order</th>
		<th style='text-align:center'>Action</th>
	</tr>
	<% @topics.each do |topic| %>
		<tr>
			<td><%=topic.id%></td>
			<td><%=topic.name%></td>
			<td width='15%'>
		    <% if topic.visible == 1%>
		   	  <div class='label label-success'>visible</div>
		    <%else%>
			  <div class='label label-warning'>not visible</div>
		    <% end %>
			</td>
			<td><%=topic.status%></td>
			<td><%=topic.expires_at.strftime("%m-%d-%Y") if topic.expires_at%></td>
			<td><%=topic.order_index%></td>
			<td width='15%'>
			<div class='label' style='display:inline'><a href="/topics/<%=topic.id%>/edit" style='color:white;text-decoration:none'>edit</a></div>
			<div class='label label-important' style='display:inline'><%= link_to("Delete", topic, :method => :delete, :style => 'color:white;text-decoration:none') %></div>
			</td>
		</tr>
	<%end%>
</table>