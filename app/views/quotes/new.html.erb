<h2>New Quote</h2>

<%= form_for @quote do |f| %>
  <% if @quote.errors.any? %>
    <div class="alert alert-error">
      <h3><%= pluralize(@quote.errors.count, "error") %> prohibited this post from being saved:</h3>

      <ul>
      <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style='margin-top:10px'>
	<%= f.label :quote %>
  	<%= f.text_area :quote,{:style=>'width:300px;height:200px'} %>
  <%= f.label :quote_push %>
	  <%= f.text_area :quote_push,{:style=>'width:300px;height:200px'} %>
	<%= f.label :citation %>
  	<%= f.text_field :citation %>
	<%= f.label :book %>
  	<%= f.text_field :book %>
	<%= f.label :author %>
  	<%= f.text_field :author %>
	<%= f.label :topic %>
  	<%= f.select('topics',@topics.collect{|t| [t.name,t.id]},{:prompt=>"Select topic"},{:multiple=>true}) %><br/>
	<%= f.label :translation %>
  	<%= f.text_field :translation %>
	<%= f.label :abbreviation %>
  	<%= f.text_field :abbreviation %>
	<%= f.label :rating %>
  	<%= f.text_field :rating %>
	<%= f.label :tags %>
    <%= f.select("tags",@tags.collect{|t|[t.name,t.id]},{:prompt=>"Select tag"},{:multiple=>true}) %><br/>
  </div>

  <div><%= f.submit "Save",{:class=>'btn',:style=>'margin-top:10px'} %></div>
<% end %>