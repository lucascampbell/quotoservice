<div class='well' style='margin-top:20px'><h2>Quotes</h2></div>
<table class='table table-striped table-bordered'>
	<tr>
		<th style='text-align:center'>Quote</th>
		<th style='text-align:center'>Citation</th>
		<th style='text-align:center'>Book</th>
		<th style='text-align:center'>Tags</th>
		<th style='text-align:center'>Topic</th>
		<th style='text-align:center'>Translation</th>
		<th style='text-align:center'>Abbreviation</th>
		<th style='text-align:center'>Created At</th>
		<th style='text-align:center'>Active</th>
		<th style='text-align:center'>Action</th>
	</tr>
	<% @quotes.each do |quote| %>
		<tr>
			<td><%=quote.quote%></td>
			<td><%=quote.citation%></td>
			<td><%=quote.book%></td>
			<% tags = quote.tags ? quote.tags.split(',') : []%>
			<td>
			<% tags.each do |t| %>
				<span class='label label-info'><%=t%></span>
			<% end %>
			</td>
			<td><%=quote.topic%></td>
			<td><%=quote.translation%></td>
			<td><%=quote.abbreviation%></td>
			<td><%=quote.created_at.strftime("%m/%d/%Y")%></td>
			<td>
			  <% if quote.active %>
			   	<div class='label label-success'>active</div>
			  <%else%>
				<div class='label label-important'><a href='/quotes/<%=quote.id%>/activate' style='color:white;text-decoration:none'> activate</a></div>
			  <% end %>
			</td>
			<td>
				<% unless quote.active %>
					<div class='label'><a href="/quotes/<%=quote.id%>/edit" style='color:white;text-decoration:none'>edit<a></div>
				<%end%>
			</td>
		</tr>
	<%end%>
</table>