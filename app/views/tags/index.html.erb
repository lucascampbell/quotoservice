<div class='well' style='margin-top:20px'><h2>Tags</h2></div>
<div class="digg_pagination" style='margin-bottom:10px'>
    <%= will_paginate @tags, :container => false %>
</div>
<table class='table table-striped table-bordered'>
	<tr>
		<th style='text-align:center'>ID</th>
		<th style='text-align:center'>Name</th>
		<th style='text-align:center'>Visible</th>
		<th style='text-align:center'>Action</th>
	</tr>
	<% @tags.each do |tag| %>
		<tr>
			<td><%=tag.id%></td>
			<td><%=tag.name%></td>
			<td width='15%'>
		    <% if tag.visible == 1%>
		   	  <div class='label label-success'>visible</div>
		    <%else%>
			  <div class='label label-warning'>not visible</div>
		    <% end %>
			</td>
			<td width='15%'>
			<div class='label' style='display:inline'><a href="/tags/<%=tag.id%>/edit" style='color:white;text-decoration:none'>edit</a></div>
			<div class='label label-important' style='display:inline'><%= link_to("Delete", tag, :method => :delete, :style => 'color:white;text-decoration:none') %></div>
			</td>
		</tr>
	<%end%>
</table>